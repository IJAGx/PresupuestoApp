@model PresupuestoApp.Models.PresupuestoViewModel

<div class="center-container">
    <h2>Paso 1 - Ingresos</h2>

    <form asp-action="Paso1" method="post">
        <div class="form-pair">
            <div class="form-wrapper">
                <label>Ingreso Mensual Previsto - Principal:</label>
                <input asp-for="IngresoPrevistoPrincipal" type="number" step="0.01" required />
            </div>
            <div class="form-wrapper">
                <label>Ingreso Mensual Previsto - Adicional:</label>
                <input asp-for="IngresoPrevistoAdicional" type="number" step="0.01" />
            </div>
            <div class="form-wrapper">
                <label>Ingreso Real - Principal:</label>
                <input asp-for="IngresoRealPrincipal" type="number" step="0.01" required />
            </div>
            <div class="form-wrapper">
                <label>Ingreso Real - Adicional:</label>
                <input asp-for="IngresoRealAdicional" type="number" step="0.01" />
            </div>
        </div>
        <button class="btn btn-secondary" type="submit">Siguiente</button>
    </form>
</div>